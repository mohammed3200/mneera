{
  "compilerOptions": {
    "module": "commonjs",            // compile imports â†’ require()
    "target": "es2020",              // or whatever Node/Electron supports
    "noEmit": false,                  // override the root noEmit
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "renderer/next.config.js", "app", "dist"]
}
